<VBox maxHeight="-Infinity" maxWidth="-Infinity" styleClass="background-gradient" stylesheets="@css/main-view.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wilsonsinclair.scheduler.MainViewController">
   <children>
      <TabPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0" rotateGraphic="true" stylesheets="@css/main-view.css" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab fx:id="schedulesTab" text="Schedules">
            <content>
              <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="913.0" prefWidth="1679.0" stylesheets="@css/main-view.css">
                     <children>
                        <Pane fx:id="schedulePane" layoutX="432.0" layoutY="195.0" prefHeight="661.0" prefWidth="1056.0" stylesheets="@css/main-view.css">
                           <children>
                              <MFXTableView fx:id="scheduleTable" layoutX="86.0" layoutY="130.0" prefHeight="402.0" prefWidth="884.0" />
                              <MFXButton fx:id="generateScheduleButton" buttonType="RAISED" depthLevel="LEVEL5" layoutX="86.0" layoutY="579.0" prefHeight="30.0" prefWidth="134.0" text="Generate" />
                              <MFXButton fx:id="deleteScheduleButton" buttonType="RAISED" depthLevel="LEVEL5" disable="true" layoutX="866.0" layoutY="579.0" prefHeight="30.0" prefWidth="104.0" text="Delete" />
                              <MFXComboBox fx:id="scheduleComboBox" floatingText="Selected Schedule" layoutX="347.0" layoutY="53.0" prefHeight="45.0" prefWidth="321.0" />
                           </children>
                        </Pane>
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="employeeTab" text="Employees">
            <content>
              <AnchorPane>
                     <children>
                        <ListView fx:id="forbiddenTimesListView" layoutX="675.0" layoutY="261.0" prefHeight="391.0" prefWidth="616.0" stylesheets="@css/main-view.css" AnchorPane.leftAnchor="675.0" AnchorPane.rightAnchor="388.0" AnchorPane.topAnchor="261.0">
                           <contextMenu>
                              <ContextMenu fx:id="forbiddenTimesListViewContextMenu">
                                <items>
                                  <MenuItem fx:id="deleteForbiddenTimeMenuItem" mnemonicParsing="false" onAction="#deleteForbiddenTime" text="Delete" />
                                </items>
                              </ContextMenu>
                           </contextMenu>
                        </ListView>
                        <MFXRadioButton fx:id="isOpenerButton" disable="true" gap="10.0" layoutX="863.0" layoutY="11.0" radius="9.0" text="Opener" />
                        <MFXRadioButton fx:id="isCloserButton" disable="true" gap="10.0" layoutX="1115.0" layoutY="11.0" radius="9.0" text="Closer" />
                        <MFXRadioButton fx:id="isManagerButton" disable="true" gap="10.0" layoutX="1395.0" layoutY="11.0" radius="9.0" text="Manager" />
                        <MFXTextField fx:id="employeeName" floatMode="BORDER" floatingText="Name" layoutX="593.0" layoutY="10.0" prefHeight="32.0" prefWidth="143.0" />
                        <Label fx:id="forbiddenTimesListViewLabel" alignment="CENTER" layoutX="901.0" layoutY="141.0" prefHeight="17.0" prefWidth="163.0" text="Cannot Work" textAlignment="CENTER" underline="true" AnchorPane.leftAnchor="901.0">
                           <font>
                              <Font size="26.0" />
                           </font>
                        </Label>
                        <MFXListView fx:id="employeeListView" layoutX="97.0" layoutY="80.0" onMouseClicked="#loadEmployee" prefHeight="887.0" prefWidth="350.0" />
                        <Separator layoutX="596.0" layoutY="80.0" prefHeight="0.0" prefWidth="1075.0" AnchorPane.leftAnchor="596.0" AnchorPane.rightAnchor="8.0" />
                        <Button fx:id="addForbiddenTImeButton" disable="true" layoutX="675.0" layoutY="679.0" mnemonicParsing="false" onAction="#handleAddForbiddenTimeButton" prefHeight="26.0" prefWidth="46.0" text="+" AnchorPane.leftAnchor="675.0">
                           <effect>
                              <DropShadow blurType="ONE_PASS_BOX" />
                           </effect>
                        </Button>
                        <Button fx:id="deleteEmloyeeButton" layoutX="1076.0" layoutY="653.0" mnemonicParsing="false" onMouseClicked="#confirmEmployeeDeletion" prefHeight="31.0" prefWidth="133.0" text="Delete Employee" AnchorPane.bottomAnchor="-524.0" AnchorPane.rightAnchor="-1109.0">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Button>
                        <MFXButton fx:id="saveEmployeeButton" depthLevel="LEVEL5" disable="true" layoutX="1477.0" layoutY="681.0" onAction="#saveEmployees" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Settings">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox fx:id="settingsVBox" alignment="CENTER" layoutX="709.0" layoutY="292.0" prefHeight="412.0" prefWidth="502.0" spacing="40.0" stylesheets="@css/settings.css">
                           <children>
                              <MFXComboBox fx:id="numLunchersComboBox" floatMode="BORDER" floatingText="Lunch Shifts" />
                              <MFXComboBox fx:id="numClosersComboBox" floatMode="BORDER" floatingText="Closing Shifts" />
                              <MFXTextField fx:id="managerHoursTextField" floatMode="BORDER" floatingText="Manager Hours" floatingTextGap="0.0" graphicTextGap="5.0" prefHeight="30.0" prefWidth="118.0" stylesheets="@css/mfx-text-field.css" />
                              <MFXButton fx:id="saveSettingsButton" buttonType="RAISED" depthLevel="LEVEL5" onAction="#handleSaveSettingsButton" prefHeight="30.0" prefWidth="79.0" rippleAnimateShadow="true" rippleColor="#a70fcd" text="Save" />
                           </children>
                        </VBox>
                     </children></AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
